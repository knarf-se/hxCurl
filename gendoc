#!/bin/sh
if [ $# -eq 0 ]
then
	targetd="dist/release"
else
	targetd="$1"
fi
#We are using chxdoc to generate API documentation from the sourcecode.
#Assuming it is installed in base directory of hxCurl (With temploc)
echo "â†’ Generating API reference documentation"
if [ -f "chxdoc" ]
then
	rm -rf docs/reference
	haxe -neko tmp/dummy.n -xml $targetd/haxedoc.xml -main docs.Dummy
	PATH=.:$PATH ./chxdoc -o docs/reference \ #--developer=true \
	-f docs -f haxe -f neko $targetd/haxedoc.xml
else
	echo "	Did not find chxdoc, won't generate API reference documentation"
fi

